{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "strictNullChecks": true,
        "skipLibCheck": true,
        
        "paths": {
            "*": [
                "./node_modules/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "jest.config.js",
        "tests/**/*"
    ],
}